@model IEnumerable<MvcCoreApiSeriesPersonajes.Models.Personaje>

@{
    ViewData["Title"] = "Index";
}

<h4>Personajes</h4>

<p>
    <a asp-action="Create">Crear nuevo personaje</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPersonaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSerie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPersonaje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <img src="@item.Imagen" style="width: 250px; height: 250px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdSerie)
                </td>
                <td>
                    @Html.ActionLink("Update", "Update", new {  id=item.IdPersonaje  }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item.IdPersonaje  }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
